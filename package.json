{
  "name": "next-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "docker:build": "docker build --platform linux/arm64 -t my-next-app .",
    "docker:up": "docker run -d -p 4002:3000 --restart unless-stopped --name next-container -v $(pwd)/sqlite.db:/app/sqlite.db my-next-app",
    "docker:stop": "docker stop next-container",
    "docker:start": "docker start next-container",
    "docker:restart": "npm run docker:stop && npm run docker:start",
    "docker:down": "docker rm -f next-container",
    "docker:logs": "docker logs -f next-container"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "daisyui": "^5.5.14",
    "drizzle-orm": "^0.45.1",
    "embla-carousel-react": "^8.6.0",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "next-themes": "^0.4.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "shadcn": "^3.7.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  },
  "packageManager": "yarn@4.12.0"
}
